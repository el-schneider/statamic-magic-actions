{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:publish": "npm run build && rm -rf ../../../public/vendor/statamic-magic-actions && php ../../../artisan vendor:publish --tag=statamic-magic-actions --force",
        "check": "npm run format:check && npm run pint:check",
        "dev": "vite",
        "fix": "npm run format:fix && npm run pint:fix",
        "format:check": "prettier --check .",
        "format:fix": "prettier --write .",
        "pint:check": "./vendor/bin/pint --test",
        "pint:fix": "./vendor/bin/pint",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@vitejs/plugin-vue": "^6.0.2",
        "laravel-vite-plugin": "^2.0.1",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "prettier-plugin-tailwindcss": "^0.6.12",
        "vite": "^7.2.6",
        "vitest": "^3.2.4"
    }
}
