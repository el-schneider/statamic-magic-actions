{
    "name": "el-schneider/statamic-magic-actions",
    "autoload": {
        "psr-4": {
            "ElSchneider\\StatamicMagicActions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require": {
        "statamic/cms": "^5.0",
        "guzzlehttp/guzzle": "^7.8",
        "symfony/yaml": "^7.0",
        "prism-php/prism": "^0.99.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "laravel/pint": "^1.21",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-browser": "^4.1"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Magic Actions",
            "description": "Statamic Magic Actions addon"
        },
        "laravel": {
            "providers": [
                "ElSchneider\\StatamicMagicActions\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "pint": "vendor/bin/pint",
        "test": "php -d extension=sockets vendor/bin/pest --no-coverage",
        "ci": [
            "@pint --test",
            "@test"
        ]
    }
}
